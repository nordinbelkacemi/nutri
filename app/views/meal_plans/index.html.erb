<div class="container text-center">
  <%= link_to "New Meal Plan", new_meal_plan_path, class: "btn btn-primary" %>
  <div id="meal-carousel">
    <% (@meal_plans + @meal_plans).each do |meal_plan| %>
    <div class="meal-plan margin-top-5 margin-bottom-5">
      <div class="meal-plan-card">
        <div class="meal-plan-name">
          <%= meal_plan.name %>
        </div>
        <div class="frame">
          <% meal_plan.meals.each do |meal| %>
          <div class="meal-card margin-top-5 margin-bottom-5">
            <div class="mask" style="background-image: url('<%= cl_image_path meal.photo %>');">
            </div>
            <div class="meal-card-bottom-text">
              <div class="meal-card-name">
                <%= meal.name %>
              </div>
              <div class="meal-card-calories">
                <%= "#{meal.calories} cal"%>
              </div>
            </div>
            <div class="<%= meal.type.downcase %> meal-type">
              <%= meal.type %>
            </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
