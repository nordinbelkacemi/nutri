<div class="container">
  <%= link_to "New Meal Plan", new_meal_plan_path, class: "follow-clone" %>
  <div id="meal-carousel">
    <% @meal_plans.each do |meal_plan| %>
      <div class="meal-plan">
        <div class="meal-plan-card">
          <div class="frame">
            <div class="meal-plan-name">
              <%= meal_plan.name %>
            </div>
            <% meal_plan.meals.each do |meal| %>
            <div class="meal-card no-grow">
              <div class="mask" style="background-image: url('<%= cl_image_path meal.photo %>');">
                <div class="<%= meal.type.downcase %> meal-type">
                  <%= meal.type %>
                </div>
              </div>
              <div class="meal-card-labels">
                <div class="meal-card-calories">
                  <i class="far fa-clock"></i>
                  <p><%= "#{meal.calories} cal"%></p>
                </div>
                <div class="meal-card-calories">
                  <i class="fas fa-fire"></i>
                  <p><%= "#{meal.calories} cal"%></p>
                </div>
                <div class="meal-card-calories">
                  <i class="fas fa-utensils"></i>
                  <p><%= meal.yield %></p>
                </div>
              </div>

              <div class="meal-card-name">
                <%= truncate(meal.name, length: 40, separator: ' ') %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
